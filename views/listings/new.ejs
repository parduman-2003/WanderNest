<% layout('layouts/layout') %>
  <link rel="stylesheet" href="/styles/new.css">
  <div class="new-form-container">
    <div class="create-heading">
      <h3>Create New Listing</h3><br>
    </div>
    <form action="/listing/Create" method="post" enctype="multipart/form-data">
      <div class="form-grid mb-3">
        <div class="form-group">
          <label for="title" class="form-label">Title</label>
          <input type="text" id="title" class="form-control" name="listing[title]" placeholder="Enter your title"
            required>
          <div class="invalid-feedback">Please provide a valid title.</div>
        </div>

        <div class="form-group">
          <label for="price" class="form-label">Price (â‚¹)</label>
          <input type="number" id="price" class="form-control" name="listing[price]" placeholder="Enter price" required>
          <div class="invalid-feedback">Please provide a valid price.</div>
        </div>
      </div>

      <div class="mb-3 form-group">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" class="form-control" name="listing[description]" placeholder="Enter description"
          rows="4" required></textarea>
        <div class="invalid-feedback">Please provide a valid description.</div>
      </div>

      <div class="form-grid mb-3 form-group">
        <div>
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" id="image" class="form-control" name="listing[image]" required>
          <div class="invalid-feedback">Please upload an image.</div>
        </div>

        <div class="form-grid mb-3 form-group">
          <label for="location" class="form-label">Location</label>
          <input type="text" id="location" class="form-control" name="listing[location]" required>
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>

        <div class="form-grid mb-3 form-group">
          <label for="country" class="form-label">Country</label>
          <input type="text" id="country" class="form-control" name="listing[country]" required>
          <div class="invalid-feedback">Please provide a valid country.</div>
        </div>
      </div>

      <div class="mb-4 form-group">
        <label for="category" class="form-label">Category</label>
        <select id="category" class="form-select" name="listing[category]" required>
          <option value="">-- Select a category --</option>
          <option value="rooms">Rooms</option>
          <option value="farms">Farms</option>
          <option value="pools">Pools</option>
          <option value="castles">Castles</option>
          <option value="camping">Camping</option>
          <option value="mountains">Mountains</option>
          <option value="arctic">Arctic</option>
          <option value="iconic-cities">Iconic Cities</option>
        </select>
        <div class="invalid-feedback">Please select a valid category.</div>
      </div>

      <div class="text-end">
        <button class="signup-btn" type="submit">Add</button>
      </div>
    </form>
  </div>