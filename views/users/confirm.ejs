<% layout('layouts/layout') %>
  <link rel="stylesheet" href="/styles/confirm.css">
  <div class="form-container">
    <h2>Confirm Your Booking</h2>

    <% if (messages.error) { %>
      <div class="alert alert-danger">
        <%= messages.error %>
      </div>
      <% } %>
        <% if (messages.success) { %>
          <div class="alert alert-success">
            <%= messages.success %>
          </div>
          <% } %>

            <form id="confirmationForm" method="POST" action="/booking/<%= listing._id %>/confirm-final">

              <input type="hidden" name="checkin" value="<%= checkin %>">
              <input type="hidden" name="checkout" value="<%= checkout %>">
              <input type="hidden" name="total" value="<%= total %>">

              <div class="form-group">
                <label for="username">Your Name</label>
                <input type="text" name="username" id="username" value="<%= user.username %>" required>
              </div>

              <div class="form-group">
                <label for="email">Your Email</label>
                <input type="email" name="email" id="email" value="<%= user.email %>" required>
              </div>

              <div class="form-group">
                <label for="address">Your Address</label>
                <input type="text" name="address" id="address" required>
              </div>

              <div class="form-group">
                <label for="otp">OTP</label>
                <input type="text" name="otp" id="otp" required>
                <div id="otpMessage" style="color: green; margin-top: 5px;"></div>
              </div>

              <button type="button" onclick="sendOtp()">Send OTP</button>
              <button type="button" onclick="verifyOtp()">Verify OTP</button>

              <button type="submit" id="finalBtn" style="display: none;">Done</button>
            </form>
  </div>

  <script src="/js/confirm.js">
  </script>